{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
			"@figaro/ui/*": ["./index.ts"],
    },
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src", "index.ts", "src/declarations.d.ts"],
  "exclude": ["node_modules"]
}
